{
  "manifest_version": 3,
  "name": "Simplix AI - Learn Your Way",
  "version": "1.1",
  "description": "Auto-explain web pages in Visual, Simplified, Story, and Exam modes.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Simplix AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
"background": {
  "service_worker": "scripts/background.js"
},
"content_scripts": [
  {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["scripts/content.js"],
    "css": ["styles/content.css"]
  }
]
,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
"web_accessible_resources": [
    {
        "resources": [
            "scripts/config.js",
            "lib/mermaid.min.js",
            "styles/content.css"
        ],
        "matches": ["<all_urls>"]
    }
]
}